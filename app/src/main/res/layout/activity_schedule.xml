<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.view.activities.ScheduleActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/inProgressRv"
            android:layout_width="393dp"
            android:layout_height="500dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/searchInProgress"/>
    <Spinner
            android:id="@+id/groupSpinner"
            android:entries="@array/group"
            style="@style/TextStyle"
            android:layout_marginTop="25dp"
            android:layout_marginStart="50dp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/inProgressRv"/>

    <Spinner
            android:id="@+id/daySpinner"
            android:entries="@array/day"
            style="@style/TextStyle"
            android:layout_marginTop="25dp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toEndOf="@+id/groupSpinner" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/inProgressRv"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:text="@string/search"
            style="@style/ButtonStyle"
            android:ems="5"
            android:id="@+id/searchButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/search_hint"
            android:layout_marginBottom="30dp"
            style="@style/TextStyle"
            android:ems="10"
            android:id="@+id/searchInProgress"
            app:layout_constraintEnd_toStartOf="@+id/searchButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>