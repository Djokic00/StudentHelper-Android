<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="150dp"
                                                   android:layout_marginTop="10dp"
                                                   android:layout_marginLeft="5dp"
                                                   android:layout_marginRight="5dp">

    <TextView
            style="@style/RecyclerStyle"
            android:id="@+id/subjectTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/professorTv"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            style="@style/RecyclerStyle"
            android:id="@+id/professorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/subjectTv"
            app:layout_constraintBottom_toTopOf="@id/classroomTv"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            style="@style/RecyclerStyle"
            android:id="@+id/classroomTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/professorTv"
            app:layout_constraintBottom_toTopOf="@id/groupTv"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            style="@style/RecyclerStyle"
            android:id="@+id/groupTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/classroomTv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/dayTv"
            style="@style/RecyclerStyle"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="40dp"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/timeTv"/>

    <TextView
            android:id="@+id/timeTv"
            style="@style/RecyclerStyle"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="40dp"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/hyphen"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hypenTv"
            app:layout_constraintStart_toEndOf="@+id/subjectTv"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/typeTv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/hypenTv"/>


</androidx.constraintlayout.widget.ConstraintLayout>